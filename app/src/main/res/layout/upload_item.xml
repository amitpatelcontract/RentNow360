<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:id="@+id/image_container"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivImage1"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="0.2"
                android:src="@drawable/camera"
                android:layout_marginRight="5dp"/>

            <ImageView
                android:id="@+id/ivImage2"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="0.2"
                android:layout_marginRight="5dp"
                android:src="@drawable/camera" />

            <ImageView
                android:id="@+id/ivImage3"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="0.2"
                android:layout_marginRight="5dp"
                android:src="@drawable/camera" />


            <ImageView
                android:id="@+id/ivImage4"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="0.2"
                android:src="@drawable/camera"
                android:layout_marginRight="5dp"/>

            <ImageView
                android:id="@+id/ivImage5"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="0.2"
                android:src="@drawable/camera"
                android:layout_marginRight="5dp"/>
        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/edittext_rounded"
                android:layout_centerHorizontal="true">
<!--ask miss or Mr or by name-->
                <EditText
                    android:id="@+id/product_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColorHint="#C1C1C1"

                    android:layout_alignParentEnd="true"
                    android:hint="@string/what_are_you_sailing"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/edittext_rounded"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true" />

                <EditText
                    android:id="@+id/product_description"
                    android:layout_width="wrap_content"
                    android:gravity="top"
                    android:layout_marginTop="5dp"
                    android:textColorHint="#C1C1C1"
                    android:layout_height="150dp"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/edittext_rounded"
                    android:layout_alignParentLeft="true"
                    android:hint="@string/can_you_tell_littlebit_more_about_product"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/product_title"
                    android:singleLine="false" />


                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/product_description"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/amount"
                        android:layout_width="0dp"
                        android:background="@drawable/edittext_rounded"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_gravity="bottom"
                        android:layout_weight="0.8" />



                    <Spinner
                        android:id="@+id/spinner_amount"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/linearLayout"
                        android:layout_weight="0.2"
                        android:spinnerMode="dropdown" />
                </LinearLayout>

                <Spinner
                    android:id="@+id/spinner_major_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/linearLayout" />

                <Spinner
                    android:id="@+id/spinner_minor_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/spinner_major_category" />

            </RelativeLayout>
        </RelativeLayout>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_gravity="center_horizontal"
            android:text="@string/let_the_world_know"
            android:id="@+id/publish" />
    </LinearLayout>
</ScrollView>
