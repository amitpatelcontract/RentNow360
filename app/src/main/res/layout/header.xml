<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    tools:context="info.androidhive.materialtabs.fragments.FourFragment">

    <ImageView
        android:id="@+id/my_product_imageview"
        android:layout_width="match_parent"
        android:background="@android:color/transparent"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/your_product_prize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignEnd="@+id/my_product_title"
        android:layout_alignRight="@+id/my_product_title"
        android:layout_centerVertical="true"
        android:text="$10"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/my_product_title"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_below="@+id/your_product_prize"
        android:layout_centerHorizontal="true"
        android:text="iPhone" />


</RelativeLayout>